pipeline {
    agent any

    tools {
        // Define the tools
        jdk 'JAVA_HOME' // Ensure 'JAVA_HOME' matches the name in Jenkins
        sonarQube 'SonarQube' // Ensure 'SonarQube' matches the name in Jenkins
    }

    stages {
        stage('Checkout SCM') {
            steps {
                // Checkout the source code from SCM
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool name: 'SonarQube', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                    def javaHome = tool name: 'JAVA_HOME', type: 'hudson.model.JDK'

                    withEnv(["JAVA_HOME=${javaHome}", "SONAR_HOST_URL=http://192.168.186.129:9000"]) {
                        withSonarQubeEnv('SonarQube') { // Ensure 'SonarQube' matches the server configuration name
                            sh """
                                ${scannerHome}/bin/sonar-scanner \
                                -Dsonar.login=admin \
                                -Dsonar.password=00000000admin \
                                -Dsonar.projectKey=1st_Sonar \
                                -Dsonar.java.binaries=target/classes
                            """
                        }
                    }
                }
            }
        }
    }
}
